<CustomBehavior File="Hooks\DoWhen" ActivityName="Interupt" AllowUseDuringCombat="True" UseWhen="Unit(81820).CastingSpellId == 164965">
	<DisableBehavior Name="Combat" />
	<If Condition="Me.GotTarget &amp;&amp; Me.CurrentTarget != Unit(81820)">
		<CustomBehavior File="RunMacro" Macro="/target Everbloom Mender" NumOfTimes="1" />
	</If>
	<CustomBehavior File="RunCode" Code="Me.CurrentTarget.Face()" />		
	<If Condition="(Me.Class == WoWClass.DeathKnight)">
		<If Condition="!WoWSpell.FromId(47528).Cooldown">
			<CustomBehavior File="RunMacro" Macro="/cast Mind Freeze" NumOfTimes="1" />
		
		<ElseIf Condition="!WoWSpell.FromId(48707).Cooldown">
			<CustomBehavior File="RunMacro" Macro="/cast Anti-Magic Shell" NumOfTimes="1" />
			</ElseIf>	
			
		<ElseIf Condition="!WoWSpell.FromId(49576).Cooldown">
			<CustomBehavior File="RunMacro" Macro="/cast Death Grip" NumOfTimes="1" />
			</ElseIf>
						
		<Else>	
			<While Condition="Unit(81820).CastingSpellId == 164965">
				<CustomBehavior File="RunMacro" Macro="/cast Asphyxiate" NumOfTimes="1" />
			</While>
			</Else>
		</If>	
	</If>
	<EnableBehavior Name="Combat" />
</CustomBehavior>
